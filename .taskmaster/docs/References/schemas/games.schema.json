{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "games.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "week_id": { "type": "string" },
    "home_team_abbr": { "type": "string", "minLength": 2, "maxLength": 3 },
    "away_team_abbr": { "type": "string", "minLength": 2, "maxLength": 3 },
    "start_time": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["scheduled", "in_progress", "final"] },
    "home_score": { "type": "integer", "minimum": 0 },
    "away_score": { "type": "integer", "minimum": 0 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "required": ["week_id", "home_team_abbr", "away_team_abbr", "start_time", "status"]
}
